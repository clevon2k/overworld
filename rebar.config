{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
	cowboy,
	gproc,
    gdminus
]
}.

{relx, [{release, {goblet, "1.0.0"},
         [goblet,
          sasl,
		  mnesia]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true},
        {overlay, [{copy, "apps/goblet/priv/*.pem", "certificate/"}]}
]}.
{plugins, [
  {rebar3_gpb_plugin, "2.13.2"},
  erlfmt
]}.

{erlfmt, [
    {files, "apps/goblet/{src,include,test}/*.{erl,esh}"},
    {print_width, 76}
]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
